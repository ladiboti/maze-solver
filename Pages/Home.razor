@page "/"

<PageTitle>MazeSolverApp</PageTitle>

<div class="bg-retro-background text-retro-highlight min-h-screen flex flex-col items-center justify-center space-y-8">
    <h1 class="text-3xl font-bold">Tailwind Retro Colors Test</h1>

    <!-- Primary Color -->
    <div class="bg-retro-primary text-white p-4 rounded-lg shadow-lg">
        Primary Color: <span class="font-bold">#F30067</span>
    </div>

    <!-- Secondary Color -->
    <div class="bg-retro-secondary text-white p-4 rounded-lg shadow-lg">
        Secondary Color: <span class="font-bold">#00D1CD</span>
    </div>

    <!-- Highlight Color -->
    <div class="bg-retro-highlight text-black p-4 rounded-lg shadow-lg">
        Highlight Color: <span class="font-bold">#EAEAEA</span>
    </div>

    <!-- Background Color -->
    <div class="bg-retro-background text-retro-primary p-4 rounded-lg shadow-lg">
        Background Color: <span class="font-bold">#444444</span>
    </div>
</div>